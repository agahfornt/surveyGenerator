<UserControl
    x:Class="UnoApp1.Presentation.multiSelective"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoApp1.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <UserControl.Resources>

        <!--TextAnswer-->
        <DataTemplate x:Key="txtAnswer">
            <Grid>
                <StackPanel 
            Grid.Row="0" 
            Orientation="Horizontal" 
            Margin="0,0,0,0">
                    <Border 
            Width="130" 
            Height="40" 
            Padding="5" 
            Margin="25,0,25,0" 
            CornerRadius="5" 
            HorizontalAlignment="Right">
                        <StackPanel 
                    Orientation="Horizontal">
                            <Ellipse>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Width" Value="20"/>
                                        <Setter Property="Height" Value="20"/>
                                        <Setter Property="Stroke" Value="Black"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Margin" Value="20,0,10,0"/>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Width" Value="20"/>
                                        <Setter Property="Height" Value="20"/>
                                        <Setter Property="Stroke" Value="Black"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Margin" Value="0,0,10,0"/>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                            <Ellipse>
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Width" Value="20"/>
                                        <Setter Property="Height" Value="20"/>
                                        <Setter Property="Stroke" Value="Black"/>
                                        <Setter Property="StrokeThickness" Value="2"/>
                                        <Setter Property="Margin" Value="0,0,20,0"/>
                                    </Style>
                                </Ellipse.Style>
                            </Ellipse>
                        </StackPanel>
                    </Border>
                    <Border  Width="130" Height="40" Padding="5" Margin="0,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                        <TextBox />
                    </Border>
                    <Border  Width="130" Height="40" Padding="5" Margin="5,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                        <TextBlock Text="گزینه اول" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </DataTemplate>
        <!--Add Key-->
        <DataTemplate x:Key="addKey">
            <Border Grid.Row="2" Width="130" Height="40" CornerRadius="20" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="25,0,0,0">
                <TextBlock Text="اضافه کردن" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </DataTemplate>
        <!--NumericforColumn-->
        <DataTemplate x:Key="numericCol">
            <StackPanel Grid.Row="3" Orientation="Horizontal" >
                <Border  Width="130" Height="40" Padding="5" Margin="25,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="1"/>
                <TextBlock Text="تعداد ستون ها :" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <!--RandomizeKey-->
        <DataTemplate x:Key="randomizeKey">
            <StackPanel Grid.Row="4" Orientation="Horizontal">
                <Ellipse  Width="40" Height="40" Margin="25,0,25,0" Stroke="Black" StrokeThickness="2" />
                <TextBlock Text="رندوم کردن گزینه ها" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
        <!--Maximum Count-->
        <DataTemplate x:Key="maxCount">
                <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="25,0,0,0" >
                    <TextBlock Text="گزینه انتخاب شود" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Border  Width="130" Height="40" Padding="5" Margin="25,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="1"/>
                    <TextBlock Text="حداکثر" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
        </DataTemplate>
        <!--Minimum Count-->
        <DataTemplate x:Key="minCount">
                <StackPanel Orientation="Horizontal" Margin="25,0,0,0" >
                    <TextBlock Text="گزینه انتخاب شود" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                    <Border  Width="130" Height="40" Padding="5" Margin="25,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="1"/>
                    <TextBlock Text="حداقل" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <!--______________________________________________________-->
    <Grid>
        <!--Body-->
        <Grid x:ConnectionId='8' x:Name="contentBody" Grid.Row="1" Height="500" Background="WhiteSmoke" CornerRadius="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid  Grid.Row="0" VerticalAlignment="Top" Height="40" Background="Cornsilk">
                <utu:TabBar  Width="180" Height="40" HorizontalAlignment="Right"  Margin="0,2,20,0">
                    <utu:TabBar.Items>
                        <utu:TabBarItem Content="Tab 1" Width="90" Height="38"  BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top"/>
                        <utu:TabBarItem Content="Tab 2" Width="90" Height="38"  BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top"/>
                    </utu:TabBar.Items>
                </utu:TabBar>
                <Ellipse x:ConnectionId='9' x:Name="CLOSE"  Width="20" Height="20" Stroke="Black" Fill="Aqua"  StrokeThickness="2" HorizontalAlignment="Left"  Margin="20,0,0,0"/>
            </Grid>

            <!--Row1-->
            <ContentControl Grid.Row="1" ContentTemplate="{StaticResource txtAnswer}"/>


            <!--Row2-->
            <ContentControl Grid.Row="2" ContentTemplate="{StaticResource txtAnswer}" />



            <!--Row3-->
            <ContentControl Grid.Row="3" ContentTemplate="{StaticResource addKey}" />


            <!--Row4-->
            <ContentControl Grid.Row="4" ContentTemplate="{StaticResource numericCol}" />


            <!--Row5-->
            <ContentControl Grid.Row="5" ContentTemplate="{StaticResource randomizeKey}" />

            <!--Row6-->
            <ContentControl Grid.Row="6" ContentTemplate="{StaticResource maxCount}"/>

            <!--Row7-->
            <ContentControl Grid.Row="7" ContentTemplate="{StaticResource minCount}"/>
        </Grid>
    </Grid>
</UserControl>

