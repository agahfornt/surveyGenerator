<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
					xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<ResourceDictionary.MergedDictionaries>
		<!-- Load WinUI resources -->
		<XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
		<MaterialToolkitTheme xmlns="using:Uno.Toolkit.UI.Material"
			ColorOverrideSource="ms-appx:///UnoApp1/Styles/ColorPaletteOverride.xaml"
			FontOverrideSource="ms-appx:///UnoApp1/Styles/MaterialFontsOverride.xaml" />

        <ResourceDictionary>
            <!--TextAnswer-->
            <DataTemplate x:Key="txtAnswer">
                <Grid>
                    <StackPanel 
                                 
                                 Orientation="Horizontal" 
                                 Margin="0,0,0,0">
                       <Border 
                                 Width="130" 
                                 Height="40" 
                                 Padding="5" 
                                 Margin="30,0,10,0" 
                                 CornerRadius="5" 
                                 HorizontalAlignment="Right">
                            <StackPanel 
                                        Orientation="Horizontal">
                                <Ellipse>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="25"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Margin" Value="20,0,10,0"/>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <Ellipse>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="25"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Margin" Value="0,0,10,0"/>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <Ellipse>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="25"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                        </Border>
                        <Border  Width="130" Height="40" Padding="5" Margin="0,0,10,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                            <TextBox />
                        </Border>
                        <Border  Width="130" Height="40" Padding="5" Margin="0,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                            <TextBlock 
                                        Text="گزینه اول" 
                                        FontFamily="B yekan"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center" />
                        </Border>
                    </StackPanel>
                </Grid>
            </DataTemplate>
            <!--TextAnswer2-->
            <DataTemplate x:Key="txtAnswer2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    
                        <Border 
                                  Grid.Column="0"
                                  Width="130" 
                                  Height="40" 
                                  Padding="5" 
                                  Margin="30,0,10,0" 
                                  CornerRadius="5" 
                                  HorizontalAlignment="Right">
                            <StackPanel 
                                        Orientation="Horizontal">
                                <Ellipse>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="25"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Margin" Value="20,0,10,0"/>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <Ellipse>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="25"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Margin" Value="0,0,10,0"/>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                                <Ellipse>
                                    <Ellipse.Style>
                                        <Style TargetType="Ellipse">
                                            <Setter Property="Width" Value="25"/>
                                            <Setter Property="Height" Value="25"/>
                                            <Setter Property="Stroke" Value="Black"/>
                                            <Setter Property="StrokeThickness" Value="2"/>
                                            <Setter Property="Margin" Value="0,0,0,0"/>
                                        </Style>
                                    </Ellipse.Style>
                                </Ellipse>
                            </StackPanel>
                        </Border>
                        <Border  Grid.Column="1" Width="130" Height="40" Padding="5" Margin="0,0,10,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                            <TextBox />
                        </Border>
                        <Border  Grid.Column="2" Width="130" Height="40" Padding="5" Margin="0,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                            <TextBlock 
                                        Text="گزینه اول" 
                                        FontFamily="B yekan"
                                        FontSize="20"
                                        FontWeight="Normal"
                                        VerticalAlignment="Center" 
                                        HorizontalAlignment="Center"/>
                        </Border>
                </Grid>
            </DataTemplate>

            <!--Add Key-->
            <DataTemplate x:Key="addKey">
                <Grid Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Border Grid.Column="1"  Width="120" Height="40" CornerRadius="20" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Center" Margin="0,0,0,0">
                        <TextBlock 
                                    Text="اضافه کردن" 
                                    FontFamily="B yekan"
                                    FontSize="20"
                                    FontWeight="Bold"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </DataTemplate>
            
            <!--NumericforColumn-->
            <DataTemplate x:Key="numericCol">
                <Grid Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                        <TextBlock 
                                   Text="تعداد ستون ها :"
                                   FontFamily="B yekan"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Right"
                                   Margin="0,0,10,5"/>
                        <Border  Width="130" Height="40" Padding="5"  CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="1"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>

            <!--RandomizeKey-->
            <DataTemplate x:Key="randomizeKey">
                <Grid Width="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="1"  Orientation="Horizontal">
                        <Ellipse  Width="40" Height="40" Margin="0,0,0,0" Stroke="Black" StrokeThickness="2" />
                        <TextBlock 
                                    Text="رندوم کردن گزینه ها"
                                    FontSize="12"
                                    FontWeight="Bold"
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </DataTemplate>
        </ResourceDictionary>
        
    </ResourceDictionary.MergedDictionaries>
	<!-- Add resources here -->

</ResourceDictionary>

