                    <ControlTemplate>
                        <StackPanel Grid.Row="3" Orientation="Horizontal" >
                            <Border  Width="130" Height="40" Padding="5" Margin="25,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="1"/>
                            <TextBlock Text="تعداد ستون ها :" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--ddd-->
        <Style TargetType="ContentControl" x:Key="ddd">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <StackPanel Grid.Row="4" Orientation="Horizontal">
