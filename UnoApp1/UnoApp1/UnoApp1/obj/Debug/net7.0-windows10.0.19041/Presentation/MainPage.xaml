    <Page.Resources>
        <!--aaa-->
        <Style TargetType="ContentControl" x:Key="aaa">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Grid>
                            <StackPanel 
                                        Grid.Row="0" 
                                        Orientation="Horizontal" 
                                        Margin="0,0,0,0">
                                <Border 
                                        Width="130" 
                                        Height="40" 
                                        Padding="5" 
                                        Margin="25,0,25,0" 
                                        CornerRadius="5" 
                                        HorizontalAlignment="Right">
                                    <StackPanel 
                                                Orientation="Horizontal">
                                        <Ellipse>
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Width" Value="20"/>
                                                    <Setter Property="Height" Value="20"/>
                                                    <Setter Property="Stroke" Value="Black"/>
                                                    <Setter Property="StrokeThickness" Value="2"/>
                                                    <Setter Property="Margin" Value="20,0,10,0"/>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <Ellipse>
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Width" Value="20"/>
                                                    <Setter Property="Height" Value="20"/>
                                                    <Setter Property="Stroke" Value="Black"/>
                                                    <Setter Property="StrokeThickness" Value="2"/>
                                                    <Setter Property="Margin" Value="0,0,10,0"/>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                        <Ellipse>
                                            <Ellipse.Style>
                                                <Style TargetType="Ellipse">
                                                    <Setter Property="Width" Value="20"/>
                                                    <Setter Property="Height" Value="20"/>
                                                    <Setter Property="Stroke" Value="Black"/>
                                                    <Setter Property="StrokeThickness" Value="2"/>
                                                    <Setter Property="Margin" Value="0,0,20,0"/>
                                                </Style>
                                            </Ellipse.Style>
                                        </Ellipse>
                                    </StackPanel>
                                </Border>
                                <Border  Width="130" Height="40" Padding="5" Margin="0,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                                    <TextBox />
                                </Border>
                                <Border  Width="130" Height="40" Padding="5" Margin="5,0,25,0" CornerRadius="5" HorizontalAlignment="Right" BorderBrush="Black" BorderThickness="2">
                                    <TextBlock Text="گزینه اول" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Bottom"/>
            <Setter Property="Margin" Value="0,0,0,0"/>
        </Style>
        
        <!--bbb-->
        <Style TargetType="ContentControl" x:Key="bbb">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate>
                        <Border Grid.Row="2" Width="130" Height="40" CornerRadius="20" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Margin="25,0,0,0">
                            <TextBlock Text="اضافه کردن" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!--CCC-->
        <Style TargetType="ContentControl" x:Key="ccc">
            <Setter Property="Template">
