<UserControl
    x:Class="UnoApp1.Presentation.multiAnswer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoApp1.Presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uen="using:Uno.Extensions.Navigation.UI"
    xmlns:utu="using:Uno.Toolkit.UI"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">
    <UserControl.Resources>
        
        <!--TextAnswer:datatemplate-->

        <!--Add Key:datatemplate-->

        <!--NumericforColumn:datatemplate-->

        <!--RandomizeKey:datatemplate-->
        
    </UserControl.Resources>
    <!--______________________________________________________-->
    
    <Grid>
        <!--Body-->
        <Grid x:ConnectionId='2' x:Name="contentBody" Grid.Row="1" Height="500" Background="WhiteSmoke" CornerRadius="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--Header-->
            <Grid  Grid.Row="0" VerticalAlignment="Top" Height="40" Background="Cornsilk">
                <utu:TabBar  Width="180" Height="40" HorizontalAlignment="Right"  Margin="0,2,20,0">
                    <utu:TabBar.Items>
                        <utu:TabBarItem Content="Tab 1" Width="90" Height="38"  BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top"/>
                        <utu:TabBarItem Content="Tab 2" Width="90" Height="38"  BorderBrush="Black" BorderThickness="1" VerticalAlignment="Top"/>
                    </utu:TabBar.Items>
                </utu:TabBar>
                <Ellipse x:ConnectionId='3' x:Name="CLOSE"  Width="20" Height="20" Stroke="Black" Fill="Aqua"  StrokeThickness="2" HorizontalAlignment="Left"  Margin="20,0,0,0"/>
            </Grid>
            
            <!--Row1-->
            <ContentControl Grid.Row="1" ContentTemplate="{StaticResource txtAnswer}"/>
           

            <!--Row2-->
            <ContentControl Grid.Row="2" ContentTemplate="{StaticResource txtAnswer2}" />
            
         

            <!--Row3-->
            <ContentControl Grid.Row="3" ContentTemplate="{StaticResource addKey}" />
          

            <!--Row4-->
            <ContentControl Grid.Row="4" ContentTemplate="{StaticResource numericCol}" />
          

            <!--Row5-->
            <ContentControl Grid.Row="4" ContentTemplate="{StaticResource randomizeKey}" />
           

        </Grid>
    </Grid>
</UserControl>

